name: Extreme Proxy Update

on:
  schedule:
    - cron: '0 */3 * * *' # Auto-update every 3 hours
  workflow_dispatch: # Allow manual launch

jobs:
  update-proxies:
    runs-on: ubuntu-latest
    permissions:
      contents: write # CRITICAL: Allows the bot to save the file
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Setup Python environment
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'

      - name: Install System dependencies
        run: |
          pip install requests maxminddb

      - name: Execute Worker
        run: python worker.py

      - name: Commit and Sync results
        run: |
          git config --global user.name "ExtremeProxyBot"
          git config --global user.email "bot@github.com"
          git add my_stable_configs.txt
          # Commit only if there are changes, otherwise exit gracefully
          git commit -m "Auto-update: $(date +'%Y-%m-%d %H:%M') [Live Check]" || exit 0
          git push
